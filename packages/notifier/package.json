{
  "name": "@dodo/notifier",
  "version": "0.1.2",
  "description": "This package provides a notifier for a NodeJS app.",
  "main": "./lib",
  "author": "Adrian Bonnici <adrian.bonnici@isobar.com>",
  "license": "MIT",
  "publishConfig": {
    "registry": "http://localhost:4873"
  },
  "dependencies": {
    "node-notifier": "^5.2.1"
  },
  "devDependencies": {
    "@dodo/eslint-config-base": "^0.1.13",
    "@dodo/eslint-config-prettier": "^0.1.17",
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "editorconfig-tools": "^0.1.1",
    "eslint": "^4.16.0"
  },
  "peerDependencies": {
    "eslint": "^4.16.0"
  },
  "scripts": {
    "editorconfig": "editorconfig-tools check src",
    "posteditorconfig": "editorconfig-tools fix src",
    "prelint": "npm run editorconfig",
    "lint": "eslint src --ext js",
    "postlint": "eslint src --fix",
    "pretest": "npm run lint",
    "test": "NODE_ENV=production TEST_MODE=true mocha --compilers js:babel-register --ui tdd --timeout 8000 ./test/index.js",
    "build": "npm run clean && NODE_ENV=production babel src -d lib --source-maps",
    "clean": "rm -rf ./lib && mkdir ./lib",
    "prepublishOnly": "npm run build && npm run test"
  }
}
