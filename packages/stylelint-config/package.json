  "description": "This package provides the Stylelint config as an extensible shared config.",
  "main": "index.js",
  "author": "Adrian Bonnici <adrian.bonnici@isobar.com>",
  "license": "MIT",
  "publishConfig": {
    "registry": "http://localhost:4873"
